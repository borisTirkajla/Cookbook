                    <Label
                        Text="Meal name:"
                        HorizontalTextAlignment="Center"
                        FontSize="Subtitle">
                    </Label>
                    <Label Style="{DynamicResource LabelStyle}"
                       Grid.Column="1"
                       VerticalOptions="Center"
                       FontSize="Title"
                       Text="{Binding Name}"
                       HorizontalTextAlignment="Center"
                       />
                    <Frame
                        BackgroundColor="#d7c7c1"
                        Padding="5"
                        CornerRadius="10"
                        >
                        <StackLayout>
                            <Label
                                Text="Description:"
                                HorizontalTextAlignment="Center"
                                FontSize="Subtitle"
                        >
                            </Label>
                            <Label
                                FontSize="20"
                                TextColor="Black"
                                Text="{Binding LongDescription}">
                            </Label>
                        </StackLayout>
                        
                    </Frame>
                    
                </StackLayout>
                
            </Frame>
            
            
            <Frame
