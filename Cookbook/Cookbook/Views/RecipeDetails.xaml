                                                        <Span
                                                                        Text="Amount: "
                                                                        />
                                                        <Span
                                                            Text="{Binding Amount}"
                                                            FontAttributes="Bold"
                                                            />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                            <Label 
