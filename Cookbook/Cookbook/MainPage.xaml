<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:Cookbook.ViewModels"
             x:Class="Cookbook.MainPage"
             x:DataType="viewmodels:MainViewModel"
             BindingContext="MainViewModel"
             NavigationPage.HasNavigationBar="False">
    
    <Grid Style="{DynamicResource GridStyle}"
          Padding="10, 10, 10, 10" RowSpacing="20" ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Style="{DynamicResource LabelStyle}"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Margin="0,0,0,0"
               FontSize="30"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="Magic Cookbook"/>
        
        <ImageButton Grid.Row="0"
                     Grid.Column="3"
                     x:Name="Settings"
                     HorizontalOptions="End"
                     VerticalOptions="Center"
                     BorderColor="Transparent"
                     BackgroundColor="Transparent"
                     Scale="0.5"
                     Source="settingsicon"
                     Command ="{Binding ButtonSettings}"/>

        <Grid Grid.Row="1"
              Grid.ColumnSpan="4">
            <CollectionView 
                Grid.Row="0"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedRecipe}"
                SelectionChangedCommand="{Binding SelectedMealTypeCommand}"
                ItemsSource="{Binding UniqueTypeRecipes}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                    Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:MainButtonViewModel">
                        <StackLayout Padding="10">
                            <Frame CornerRadius="15">
                                <Label
                                       Text="{Binding Type}"
                                        TextColor="Black"
                                        HeightRequest="40"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        FontSize="Title"
                                       />
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </Grid>
</ContentPage>
