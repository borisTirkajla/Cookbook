<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookbook.MainPage">
    <Grid Padding="20, 20, 20, 200" RowSpacing="20" ColumnSpacing="20" BackgroundColor="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Margin="0,0,0,0"
               FontSize="40"
               HorizontalOptions="Start"
               VerticalOptions="Center"
               Text="       Cookbook"/>
        <ImageButton Grid.Row="0"
                     Grid.Column="1"
                     x:Name="Settings"
                     HorizontalOptions="End"
                     VerticalOptions="Center"
                     Source="settingsicon"
                     BorderColor="Transparent"
                     BackgroundColor="Transparent"
                     Scale="0.5"/>
        <Button Grid.Row="1"
                Grid.Column="0"
                BackgroundColor="White"
                x:Name="Breakfast"
                FontSize="20"
                Text="Breakfast"/>
        <Button Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="White"
                x:Name="Lunch"
                FontSize="20"
                Text="Lunch"/>
        <Button Grid.Row="2"
                Grid.Column="0"
                BackgroundColor="White"
                x:Name="Brunch"
                FontSize="20"
                Text="Brunch"/>
        <Button Grid.Row="2"
                Grid.Column="1"
                BackgroundColor="White"
                FontSize="20"
                x:Name="Dinner"
                Text="Dinner"/>
    </Grid>

</ContentPage>
