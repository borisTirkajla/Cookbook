<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookbook.MainPage">
    <Grid Padding="20, 20, 20, 200" RowSpacing="20" ColumnSpacing="20" BackgroundColor="Red">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,0"
                FontSize="20"
                Text="Cookbook"/>
        <Button Grid.Row="0"
                Grid.Column="1"
                x:Name="Settings"
                FontSize="15"/>
        <Button Grid.Row="1"
                Grid.Column="0"
                x:Name="Breakfast"
                FontSize="20"
                Text="Breakfast"/>
        <Button Grid.Row="1"
                Grid.Column="1"
                x:Name="Lunch"
                FontSize="20"
                Text="Lunch"/>
        <Button Grid.Row="2"
                FontSize="20"
                x:Name="Dinner"
                Text="Dinner"/>
    </Grid>

</ContentPage>
