<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:Cookbook.ViewModels"
             x:Class="Cookbook.MainPage"
             x:DataType="viewmodels:MainViewModel"
             BindingContext="MainViewModel"
             NavigationPage.HasNavigationBar="False">
    
    <Grid Style="{DynamicResource GridStyle}"
          Padding="20, 20, 20, 200" RowSpacing="20" ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style 
                TargetType="Button">
                <Setter Property="BackgroundColor" Value="#acbdbd"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Grid.Resources>
        <Label Style="{DynamicResource LabelStyle}"
               Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Margin="0,0,0,0"
               FontSize="30"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="Magic Cookbook"/>
        <ImageButton Grid.Row="0"
                     Grid.Column="3"
                     x:Name="Settings"
                     HorizontalOptions="End"
                     VerticalOptions="Center"
                     BorderColor="Transparent"
                     BackgroundColor="Transparent"
                     Scale="0.5"
                     Source="settingsicon"
                     Command ="{Binding ButtonSettings}"/>
        <Button Style="{DynamicResource ButtonMainPage}"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                FontSize="20"
                Text="Breakfast"
                CommandParameter="Breakfast"
                Command="{Binding MealButton}"/>
        <Button Style="{DynamicResource ButtonMainPage}"
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                FontSize="20"
                Text="Lunch"
                CommandParameter="Lunch"
                Command="{Binding MealButton}"/>
        <Button Style="{DynamicResource ButtonMainPage}"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                FontSize="20"
                Text="Dinner"
                CommandParameter="Dinner"
                Command="{Binding MealButton}"/>
    </Grid>
</ContentPage>
