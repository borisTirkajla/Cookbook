<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookbook.MainPage">
    <Grid Style="{StaticResource GridMainPage}"
          Padding="20, 20, 20, 200" RowSpacing="20" ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Margin="0,0,0,0"
               FontSize="30"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="Cookbook"/>
        <ImageButton Grid.Row="0"
                     Grid.Column="1"
                     x:Name="Settings"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Source="settingsicon"/>
        <Button Style="{StaticResource ButtonMainPage}"
                Grid.Row="1"
                Grid.Column="0"
                x:Name="Breakfast"
                FontSize="20"
                Text="Breakfast"/>
        <Button Style="{StaticResource ButtonMainPage}"
                Grid.Row="1"
                Grid.Column="1"
                x:Name="Lunch"
                FontSize="20"
                Text="Lunch"/>
        <Button Style="{StaticResource ButtonMainPage}"
                Grid.Row="2"
                FontSize="20"
                x:Name="Dinner"
                Text="Dinner"/>
    </Grid>

</ContentPage>
