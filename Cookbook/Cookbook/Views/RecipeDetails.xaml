                                                                        Text="{Binding Unit}"
                                                                        FontAttributes="Bold"
                                                                        />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </Grid>

                                    </Frame>

                                    <Label>

                                    </Label>
                                </StackLayout>

                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
