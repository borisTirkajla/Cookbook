<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cookbook.Resources.Light">
    <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="LightGray"/>
    </Style>
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="White" />
    </Style>
    <Style x:Key="ButtonMainPage" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#acbdbd"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>
    <Style x:Key="GridMainPage" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="#c4d7d7"/>
    </Style>
</ResourceDictionary>