                    <Image
                        VerticalOptions="Start"
                        HorizontalOptions="Start"
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Opacity="0.9"
                        Source="{Binding BackgroundImage}">

                    </Image>

                    <Frame
                        Grid.Column="0"
                        Opacity="0.9"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        CornerRadius="20"
                        BackgroundColor="#efdcd5">
                        <ImageButton
                                HorizontalOptions="Center"
                                BackgroundColor="Transparent"
                                Source="outline_arrow_back_ios_24"
                                VerticalOptions="Center"
                                Command="{Binding BackButtonClicked1}"/>
                    </Frame>
                </Grid>
            </Frame>
            <Frame Padding="1"
                   CornerRadius="10"
                   BackgroundColor="#bcaaa4">
