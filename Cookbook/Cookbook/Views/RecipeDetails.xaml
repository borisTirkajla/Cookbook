                                                        <Span
                                                                        Text="Name: "
                                                                        />
                                                        <Span
                                                                        Text="{Binding Name}"
                                                                        FontAttributes="Bold"
                                                                        />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                            <Label 
                                                            Grid.Row="1"
                                                            TextColor="Black">
